@model IEnumerable<SecurityLite.Areas.Identity.Data.SecurityLiteUser>

@{
    ViewData["Title"] = "Пользователи - главная";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Пользователи</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>    
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактирование</a> |
                    <a asp-action="ChangePassword" asp-route-id="@item.Id">Сменить пароль</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>