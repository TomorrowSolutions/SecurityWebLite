@model IEnumerable<SecurityLite.Models.Service>

@{
    ViewData["Title"] = "Услуги - главная";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>

@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="GetReport">Получить отчет</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodOfExecution)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PeriodOfExecution)
            </td>
            <td>
                    @if (User.IsInRole("admin")||User.IsInRole("manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактирование</a> 
                        <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
