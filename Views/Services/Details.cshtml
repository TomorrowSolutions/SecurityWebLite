@model SecurityLite.Models.Service

@{
    ViewData["Title"] = "Услуги - подробности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Услуга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PeriodOfExecution)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PeriodOfExecution)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">На главную</a>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Description').summernote({
                disable: true,
                airMode: true
            });
        });
    </script>
}